{
  "name": "zerosend",
  "version": "1.0.0",
  "description": "Zero-retention quantum-resistant file transfer",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "db:migrate": "prisma migrate dev --config prisma.config.ts",
    "db:generate": "prisma generate --config prisma.config.ts",
    "db:studio": "prisma studio --config prisma.config.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "prisma": {
    "schema": "prisma/schema.camel.prisma"
  },
  "type": "module",
  "packageManager": "pnpm@10.30.1",
  "keywords": [],
  "author": "karkyon",
  "license": "UNLICENSED",
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "hono": "^4.7.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "otplib": "^12.0.1",
    "nodemailer": "^6.9.16",
    "zod": "^3.24.2",
    "@prisma/client": "^7.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.3.0",
    "@types/nodemailer": "^7.0.11",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "dotenv": "^17.3.1",
    "eslint": "^10.0.1",
    "prettier": "^3.8.1",
    "prisma": "^7.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
