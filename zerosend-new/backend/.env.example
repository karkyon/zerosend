# ─── Database ───────────────────────────────────────────────────────────────
DATABASE_URL="postgresql://zerosend:zerosend_pw@localhost:5432/zerosend_db"

# ─── Redis ───────────────────────────────────────────────────────────────────
REDIS_URL="redis://localhost:6379"

# ─── JWT ─────────────────────────────────────────────────────────────────────
# 256bit以上のランダム文字列を設定 (例: openssl rand -hex 32)
JWT_SECRET="change_me_use_openssl_rand_hex_32"
# JWTの有効期限 (例: 8h, 1d)
JWT_EXPIRES_IN="8h"

# ─── Encryption ──────────────────────────────────────────────────────────────
# TOTP シークレット暗号化用 AES-256 鍵 (64文字 hex = 256bit)
# openssl rand -hex 32
TOTP_ENCRYPTION_KEY="change_me_use_openssl_rand_hex_32"

# ─── Email (Nodemailer / SMTP) ───────────────────────────────────────────────
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@zerosend.example.com"

# ─── App ─────────────────────────────────────────────────────────────────────
PORT="8000"
NODE_ENV="development"
APP_BASE_URL="http://localhost:8000"
FRONTEND_BASE_URL="http://localhost:3000"

# ─── Cloud Storage ───────────────────────────────────────────────────────────
# 初期は 'server' (ローカル保存) を使用。本番は box / gdrive / onedrive / dropbox
DEFAULT_CLOUD_TYPE="server"

# Box (cloud_type=box の場合)
BOX_CLIENT_ID=""
BOX_CLIENT_SECRET=""
BOX_ENTERPRISE_ID=""

# ─── Rate Limit ──────────────────────────────────────────────────────────────
# 未認証リクエスト: 100req/60s、認証済み: 1000req/60s
RATE_LIMIT_WINDOW_SEC="60"
RATE_LIMIT_ANON_MAX="100"
RATE_LIMIT_AUTH_MAX="1000"
# TOTP 失敗ロック閾値
TOTP_LOCK_THRESHOLD="5"
